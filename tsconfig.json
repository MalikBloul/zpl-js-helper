{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES6",
        "moduleResolution": "node",
        "module": "ESNext",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist"

    },
    "include": ["src"],
    "exclude": ["node_modules"]
}